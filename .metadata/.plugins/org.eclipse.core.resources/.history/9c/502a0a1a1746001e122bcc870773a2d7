package day10;

public class Class03 {

	public static void main(String[] args) {
		//tv 전원 on/off 
		//power
		//채널 up/down 
		//볼륨 
		

		TV t = new TV ("삼성" , "블랙");
		t.powerOn();
		t.soundUp();
		t.soundUp();
		t.soundUp();
		t.soundUp();
		t.soundUp();
		t.soundUp();
		t.soundUp();
		t.soundDown();
		t.soundDown();
		t.soundDown();
		t.soundDown();
		t.soundDown();
		t.soundDown();
		t.soundDown();
		t.powerOff();
		
		
		
	}

}


class TV{
	//멤버변수 선언 
	private String name;
	private String color;
	private boolean power;
	private int sound;
	
	//생성자
	
	public TV () {}
	public TV(String name, String color) {
		this.name=name;
		this.color=color;
	}
		//메서드
		
		public void powerOn(){
			power=true;
			System.out.println("전원이 켜졌습니다");
		}
		public void powerOff(){
			power=false;
			System.out.println("전원이 꺼졌습니다.");
		} 
		
		public void soundUp() {
			if (power) {
				sound=sound+10;
				System.out.println("현재 티비 소리" + sound);
			}	else {
			sound=sound-10;
			System.out.println("소리를 높여주세요.");
			}
		}
		
		
		public void soundDown() {
			if(sound==0) {
				System.out.println("더이상 소리를 내릴 수 없습니다.");
			}System.out.println("현재 티비 소리"+ sound);
		}
		

}
	
	
	
	//getter/setter

public String getname () {
	return name;
}
public void setname(String name) {
	this.name=name;
}
public String getcolor() {
	return color;
}
public void setcolor(String color) {
	this.color=color;
}
public boolean getpower() {
	return power;
}
public void setpower(boolean power) {
	this.power=power;
}
public int sound() {
	return sound;
}
public void setsound(int sound) {
	this.sound=sound;
}




	




	



